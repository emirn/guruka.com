---
const features = [
  {
    title: 'Speed Match',
    description: 'Boost processing speed with fast-paced symbol matching',
    color: 'primary',
    icon: 'zap',
  },
  {
    title: 'Memory Matrix',
    description: 'Strengthen spatial memory by recalling grid patterns',
    color: 'accent',
    icon: 'grid',
  },
  {
    title: 'Sequence Recall',
    description: 'Train working memory with dual-track sequences',
    color: 'secondary',
    icon: 'list',
  },
];
---

<section class="py-20 bg-[hsl(var(--muted)/0.3)]">
  <div class="container mx-auto">
    <!-- Section Header -->
    <div class="text-center mb-12">
      <h2 class="font-display text-3xl md:text-4xl font-bold mb-4">
        Three Powerful Games
      </h2>
      <p class="text-[hsl(var(--muted-foreground))] max-w-2xl mx-auto">
        Each game targets different cognitive skills, backed by neuroscience research
      </p>
    </div>

    <!-- Feature Cards -->
    <div class="grid md:grid-cols-3 gap-6 max-w-5xl mx-auto">
      {features.map((feature, index) => (
        <div
          class="game-card p-6 hover:scale-105 transition-transform duration-300"
          style={`animation-delay: ${index * 100}ms`}
        >
          <div class={`inline-flex p-3 rounded-xl bg-[hsl(var(--${feature.color})/0.1)] mb-4`}>
            {feature.icon === 'zap' && (
              <svg class={`h-6 w-6 text-[hsl(var(--${feature.color}))]`} viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M4 14a1 1 0 0 1-.78-1.63l9.9-10.2a.5.5 0 0 1 .86.46l-1.92 6.02A1 1 0 0 0 13 10h7a1 1 0 0 1 .78 1.63l-9.9 10.2a.5.5 0 0 1-.86-.46l1.92-6.02A1 1 0 0 0 11 14z" />
              </svg>
            )}
            {feature.icon === 'grid' && (
              <svg class={`h-6 w-6 text-[hsl(var(--${feature.color}))]`} viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <rect width="7" height="7" x="3" y="3" rx="1" />
                <rect width="7" height="7" x="14" y="3" rx="1" />
                <rect width="7" height="7" x="14" y="14" rx="1" />
                <rect width="7" height="7" x="3" y="14" rx="1" />
              </svg>
            )}
            {feature.icon === 'list' && (
              <svg class={`h-6 w-6 text-[hsl(var(--${feature.color}))]`} viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <line x1="10" x2="21" y1="6" y2="6" />
                <line x1="10" x2="21" y1="12" y2="12" />
                <line x1="10" x2="21" y1="18" y2="18" />
                <path d="M4 6h1v4" />
                <path d="M4 10h2" />
                <path d="M6 18H4c0-1 2-2 2-3s-1-1.5-2-1" />
              </svg>
            )}
          </div>
          <h3 class="font-display text-xl font-bold mb-2">{feature.title}</h3>
          <p class="text-[hsl(var(--muted-foreground))]">{feature.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>
