---
const benefits = [
  'Science-backed exercises',
  'Adaptive difficulty',
  'Track your progress',
  'Compete globally',
];
---

<section class="py-20">
  <div class="container mx-auto">
    <div class="grid lg:grid-cols-2 gap-12 items-center max-w-6xl mx-auto">
      <!-- Text Content -->
      <div>
        <h2 class="font-display text-3xl md:text-4xl font-bold mb-6">
          Why Train with GURUKA?
        </h2>
        <ul class="space-y-4">
          {benefits.map((benefit, index) => (
            <li
              class="flex items-center gap-3"
              style={`animation-delay: ${index * 100}ms`}
            >
              <svg class="h-6 w-6 text-[hsl(var(--success))] flex-shrink-0" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14" />
                <path d="m9 11 3 3L22 4" />
              </svg>
              <span class="text-lg">{benefit}</span>
            </li>
          ))}
        </ul>

        <a
          href="https://app.guruka.com"
          class="inline-flex items-center justify-center gap-2 rounded-lg font-medium transition-colors bg-[hsl(var(--primary))] text-[hsl(var(--primary-foreground))] hover:bg-[hsl(var(--primary)/0.9)] h-12 px-6 mt-8"
        >
          Start Training Free
        </a>
      </div>

      <!-- Visual -->
      <div class="relative">
        <div class="aspect-square rounded-2xl bg-gradient-hero flex items-center justify-center">
          <svg class="h-32 w-32 text-white/90 animate-float" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
            <path d="M12 2a8 8 0 0 1 8 8c0 5.4-8 12-8 12S4 15.4 4 10a8 8 0 0 1 8-8Z" />
            <circle cx="12" cy="10" r="3" />
          </svg>
        </div>
        <div class="absolute -bottom-6 -right-6 p-4 rounded-xl glass shadow-xl">
          <div class="font-display font-bold text-2xl text-[hsl(var(--primary))]">20+</div>
          <div class="text-sm text-[hsl(var(--muted-foreground))]">Levels per game</div>
        </div>
      </div>
    </div>
  </div>
</section>
