---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Page Not Found - GURUKA">
  <div class="container mx-auto py-20">
    <div class="max-w-lg mx-auto text-center">
      <div class="text-8xl font-display font-bold text-[hsl(var(--primary))] mb-4">404</div>
      <h1 class="font-display text-2xl font-bold mb-4">Page Not Found</h1>
      <p class="text-[hsl(var(--muted-foreground))] mb-8">
        The page you're looking for doesn't exist or has been moved.
      </p>
      <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
        <a
          href="/"
          class="inline-flex items-center justify-center gap-2 rounded-lg font-medium transition-colors bg-[hsl(var(--primary))] text-[hsl(var(--primary-foreground))] hover:bg-[hsl(var(--primary)/0.9)] h-10 px-6"
        >
          Go Home
        </a>
        <a
          href="https://app.guruka.com"
          class="inline-flex items-center justify-center gap-2 rounded-lg font-medium transition-colors border border-[hsl(var(--border))] bg-[hsl(var(--background))] hover:bg-[hsl(var(--muted))] h-10 px-6"
        >
          Open App
        </a>
      </div>
    </div>
  </div>
</BaseLayout>
